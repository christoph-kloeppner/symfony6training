{% extends 'base.html.twig' %}

{% block title %}All movies{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    {% for movie in movies %}
        <div class="example-wrapper">
            <h1><a href="{{ path('app_movie_details', {'id': movie.id}) }}">Details of "{{ movie.title??'No title' }}"</a></h1>
            <p>Here are the details of the movie with the id {{ movie.id }}.</p>
            <p>Released at: {{ movie.releasedAt|date("m/d/Y") }}</p>
            <p>Genres: {{ movie.genre|join(', ') }}</p>
        </div>
    {% endfor %}
{% endblock %}